# top-most EditorConfig file
root = true

# Universal settings
[*]
# Use Unix-style line endings
end_of_line = lf
# Use UTF-8 encoding
charset = utf-8
# Indent with spaces
indent_style = space
# Define the number of spaces per indentation level
indent_size = 4

# Shell scripts
[*.sh]
# Ensure files are treated as shell scripts
trim_trailing_whitespace = true
insert_final_newline = true
